<h1>プロット[ID: <%= params[:id] %>]<h1>

<%= render 'form' %>
<hr>
<%= form_for(@convention) do |f| %> 
	<%= f.hidden_field :title, value: params[:id] %>
	<% @plot_pieces.each do |piece| %>
		<%= f.hidden_field :plots, name: "convention[plots][]", value: piece.content %>
	<% end %>
	<%= f.submit value: "このプロットで大会を作る" %>
<% end %>
