<h1>プロット[ID: <%= params[:id] %>]<h1>

<%= form_for(@story_post) do |f| %>
	<%= f.text_area :content, name: 'story_post[content][]', value:'', placeholder: "下の状況になる以前のストーリーや前提を書いてね" %>
	<% @plot_pieces.each do |plot_piece| %>
		<h2><%= plot_piece.content %></h2>
		<%= f.text_area :content, name: 'story_post[content][]', value:'', placeholder: "上の状況と下の状況の間をつなぐストーリーを書いてね" %>
	<% end %>
	<%= f.submit %>
<% end %>
